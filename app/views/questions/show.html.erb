<div class="container">
	<%= link_to 'Home Page', {controller: :home, action: :index}, class: 'nav' %>

	<div class="lead well">
		<div class="media">
		  <div class="media-left">
		    <a href="#">
		      <img class="media-object" src="../../assets/question.jpeg" alt="">
		    </a>
		  </div>
		  <div class="media-body">
		    <h4 class="media-heading"><%= @question.email %> asked:</h4>
		    <%= @question.body %>
		  </div>
		</div>
	</div>
</div>

<div class="container">
	<div>
		<a href="#" class="btn btn-success navbar-btn btn-sm" data-toggle="modal" 
      		data-target="#new-answer-modal">Post Answer
      	</a>
	</div>

	<%= render 'home/new_answer_form' %>

	<% @answers.each do |a| %>
		<div class="media">
		  <div class="media-left">
		    <a href="#"> <img class="media-object" src="../../assets/answer.png" alt=""></a>
		  </div>
		  <div class="media-body">
		    <h4 class="media-heading"> <%= a.email %> answered</h4>
    	    <%= time_ago_in_words a.created_at %> ago
		    <%= a.body %>
		  </div>
		</div>
	<% end %>
</div>